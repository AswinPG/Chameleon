<?xml version="1.0" encoding="utf-8" ?>
<core:MvxContentPage
    xmlns:core="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms" 
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Chameleon.Core.ViewModels;assembly=Chameleon.Core"
    xmlns:mm="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms"
    xmlns:templates="clr-namespace:Chameleon.Core.Templates;assembly=Chameleon.Core"
    mc:Ignorable="d"
    x:TypeArguments="viewModels:AddToPlaylistViewModel"
    x:Class="Chameleon.Core.Views.AddToPlaylistPage"
    mvx:La.ng="Title Title"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="True">

   <ContentPage.Content>  
        <Grid VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="{StaticResource BackgroundColorAddToPlaylist}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                mvx:La.ng="Placeholder NewPlaylist"
                mvx:Bi.nd="Text PlaylistName"
                Grid.Column="0"
                Grid.Row="0"
                Style="{StaticResource TextColorEntry}"
                Margin="10,10,5,0"/>
            <Button
                mvx:La.ng="Text Add"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalOptions="End"
                Margin="0,10,10,0"
                Style="{StaticResource AddToPlaylistButton}"
                mvx:Bi.nd="Command AddPlaylistCommand"/>
            <core:MvxListView
                Grid.Row="1"
                Grid.ColumnSpan="2"
                ItemsSource="{mvx:MvxBind Playlists}"
                ItemClick="{mvx:MvxBind AddToPlaylistCommand}"
                VerticalOptions="FillAndExpand">
                <core:MvxListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:AddToPlaylistItemTemplate/>
                        </ViewCell>
                    </DataTemplate>
                </core:MvxListView.ItemTemplate>
            </core:MvxListView>
            <Button HorizontalOptions="FillAndExpand"
                    mvx:La.ng="Text Cancel"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource CancelButton}"
                    mvx:Bi.nd="Command BackCommand"/>
        </Grid>
   </ContentPage.Content>
</core:MvxContentPage>
