<?xml version="1.0" encoding="utf-8" ?>
<core:MvxContentPage
    xmlns:core="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Chameleon.Core.ViewModels;assembly=Chameleon.Core"
    xmlns:templates="clr-namespace:Chameleon.Core.Templates;assembly=Chameleon.Core"
    xmlns:pan="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    mc:Ignorable="d"
    x:Class="Chameleon.Core.Views.BrowsePage"
    x:TypeArguments="viewModels:BrowseViewModel"
    mvx:La.ng="Title Title"
    x:Name="thisPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="icon_plus"
                     Order="Primary"
                     mvx:Bi.nd="Command AddCommand" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <core:MvxListView
            ItemsSource="{mvx:MvxBind RecentlyPlayedItems}"
            SelectionMode="Single"
            RowHeight="60"
            SelectedItem="{Binding SelectedMediaItem, Mode=TwoWay}"
            ItemClick="{mvx:MvxBind PlayerCommand}"
            SeparatorVisibility="None">
            <core:MvxListView.Header>
                <StackLayout Spacing="0">
                    <SearchBar
                        mvx:La.ng="Placeholder SearchBar"
                        Text="{mvx:MvxBind SearchText}">
                    </SearchBar>
                    <Label
                        mvx:La.ng="Text Artists"
                        IsVisible="{Binding IsArtistsVisible, Mode=OneWay}"
                        Style="{StaticResource Header1}"
                        Margin="24,0" />
                    <CollectionView
                        x:Name="MyCollectionView"
                        IsVisible="{Binding IsArtistsVisible, Mode=OneWay}"
                        mvx:Bi.nd="
                                    ItemsSource FavoriteArtists;
                                    SelectionChangedCommand OpenArtistCommand;
                                    SelectionChangedCommandParameter SelectedArtist;
                                    SelectedItem SelectedArtist "
                        SelectionMode="Single"
                        HeightRequest="250">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                Orientation="Horizontal"
                                VerticalItemSpacing="1"
                                HorizontalItemSpacing="0" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                             <StackLayout>
                                <ActivityIndicator Color="DimGray"
                                                   mvx:Bi.nd="IsRunning IsLoading"
                                                   HeightRequest="50" />
                                <Grid Padding="24,0,10,10"
                                      VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="56" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="56" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <pan:PancakeView
                                        CornerRadius="3"
                                        IsClippedToBounds="True"
                                        Elevation="2"
                                        BackgroundColor="{DynamicResource SecondaryColor}">
                                        <pan:PancakeView.HasShadow>
                                            <OnPlatform x:TypeArguments="x:Boolean"
                                                        iOS="False"
                                                        Android="True" />
                                        </pan:PancakeView.HasShadow>
                                        <Image
                                            BackgroundColor="{DynamicResource SecondaryColor}"
                                            Source="icon_plus_big"
                                            Margin="15"/>
                                    </pan:PancakeView>
                                    <Label
                                        Text="Add Provider"
                                        Grid.Column="1"
                                        VerticalOptions="Center"
                                        Style="{StaticResource MediaItemTitle}" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={x:Reference Name=thisPage}, Path=BindingContext.DataContext.ProvidersPage}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </StackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <templates:HorizontalMediaItemsTemplate />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </core:MvxListView.Header>
            <core:MvxListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <templates:MediaItemTemplate />
                    </ViewCell>
                </DataTemplate>
            </core:MvxListView.ItemTemplate>
        </core:MvxListView>
    </ContentPage.Content>
</core:MvxContentPage>